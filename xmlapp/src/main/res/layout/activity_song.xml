<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id= "@+id/song_player_setting_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:background="@drawable/button_background_white_color"
        android:src="@drawable/btn_player_setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id= "@+id/song_player_eq_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:background="@drawable/button_background_white_color"
        android:src="@drawable/btn_player_eq_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/song_player_setting_iv"/>
    <ImageButton
        android:id= "@+id/song_player_down_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:background="@drawable/button_background_white_color"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id= "@+id/song_player_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:background="@drawable/button_background_white_color"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toBottomOf="@id/song_player_down_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id= "@+id/song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Love Wins All"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/song_player_more_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id= "@+id/song_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/song_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/song_img_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_album_lovewinsall"
        app:layout_constraintTop_toBottomOf="@id/song_author_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/song_like_unlike_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_img_iv">
        <ImageButton
            android:id= "@+id/song_like_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_my_like_off"
            android:background="@drawable/button_background_white_color"
            />
        <ImageButton
            android:id= "@+id/song_unlike_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btn_player_unlike_off"
            android:background="@drawable/button_background_white_color"
            />

    </LinearLayout>
    <SeekBar
        android:id="@+id/song_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/song_like_unlike_ll"/>

    <LinearLayout
        android:id="@+id/song_control_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_seekbar">
        <ImageButton
            android:id= "@+id/song_random_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"

            android:background="@drawable/button_background_white_color"
            android:src="@drawable/nugu_btn_random_inactive"/>
        <ImageButton
            android:id= "@+id/song_skip_previous_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/button_background_white_color"
            android:src="@drawable/nugu_btn_skip_previous_32"/>
        <ImageButton
            android:id= "@+id/song_play_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/button_background_white_color"
            android:src="@drawable/nugu_btn_play_32"/>
        <ImageButton
            android:id= "@+id/song_skip_next_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/button_background_white_color"
            android:src="@drawable/nugu_btn_skip_next_32"/>
        <ImageButton
            android:id= "@+id/song_repeat_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/button_background_white_color"
            android:src="@drawable/nugu_btn_repeat_inactive"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>