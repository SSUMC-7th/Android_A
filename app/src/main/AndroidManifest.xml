<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">\

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />


    <application
        android:name = ".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Umc_7th"
        tools:targetApi="31"
        tools:ignore="ForegroundServicePermission"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".main.home.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Umc_7th">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".album.AlbumItemActiviy"/>
        <activity android:name=".user.LoginActivity"/>
        <activity android:name=".user.SignUpActivity"/>"
        <activity
            android:name=".main.song.SongActivity"
            android:exported="true"
            android:label="songActicity"
            android:theme="@style/Theme.Umc_7th" />
        <service
            android:name=".MusicPlayerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />


    </application>

</manifest>